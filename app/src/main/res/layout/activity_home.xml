<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home"
    android:orientation="vertical"
    android:background="@drawable/background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CurveX"
        android:textSize="55dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textColor="#FFFFFF"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/hlogo"></ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button
            android:id="@+id/cc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="160dp"
            android:height="60dp"
            android:textSize="15dp"
            android:background="@drawable/butt_background"
            android:gravity="center"
            android:text="Currency Converter"
            android:layout_weight="1"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="20dp"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/tc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:width="150dp"
            android:height="60dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/butt_background"
            android:gravity="center"
            android:text="Time Converter"
            android:textColor="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/dc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="60dp"
            android:layout_weight="1"
            android:textSize="15dp"
            android:width="160dp"
            android:height="60dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/butt_background"
            android:gravity="center"
            android:text="Distance Converter"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/wc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:width="150dp"
            android:height="60dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/butt_background"
            android:gravity="center"
            android:text="Weight Converter"
            android:textColor="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/lc"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="50dp"
            android:width="150dp"
            android:textSize="15dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/butt_background"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="Temperature Calculator"
            android:textColor="#ffffff" />
    </LinearLayout>



</LinearLayout>